<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="75.5dip"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingLeft="44.599976dip"
    android:paddingRight="44.599976dip">

    <TextView
        android:id="@+id/city_name"
        android:layout_width="fill_parent"
        android:layout_height="28.0dip"
        android:gravity="center"
        android:textSize="22.0sp" />

    <LinearLayout
        android:id="@+id/time_zone_layout"
        android:layout_width="fill_parent"
        android:layout_height="22.5dip"
        android:layout_below="@id/city_name"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/city_code"
            android:layout_width="fill_parent"
            android:layout_height="22.5dip"
            android:layout_weight="2.0"
            android:alpha="0.65"
            android:gravity="center"
            android:textSize="17.0sp" />

        <TextView
            android:id="@+id/city_time_zone"
            android:layout_width="fill_parent"
            android:layout_height="22.5dip"
            android:layout_weight="1.0"
            android:alpha="0.65"
            android:gravity="center"
            android:textSize="17.0sp" />
    </LinearLayout>
</RelativeLayout>